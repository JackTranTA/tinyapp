<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <ul class= "nav navbar-nav navbar-right">
      <li>
        <a class="nav-item nav-link" href="/register"><strong>Sign Up</strong></a>
      </li>
      <% if (!user) { %>
        <li>
          <a class="nav-item nav-link" href="/login"><strong>Login</strong></a>
        </li>
      <% } else { %>
        <form class="form-inline position-absolute-right" action="/logout" method="POST">
          <label for="username" style="margin-right: 10px;">
            Logged in as: <%= user.email %>
          </label>
          <button type="submit" class="btn btn-outline-dark">Logout</button>
        </form>
      <% } %>
    </ul>
  </nav>

</header>